= form_for @music do |f|
  - if @music.errors.any?
    #error_explanation
      %h2= "#{pluralize(@music.errors.count, "error")} prohibited this music from being saved:"
      %ul
        - @music.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :play_time
    = f.number_field :play_time
  .field
    = f.label :artists
    = f.text_field :artists
  .field
    = f.label :album
    = f.text_field :album
  .field
    = f.label :genre
    = f.text_field :genre
  .field
    = f.label :like
    = f.check_box :like
  .actions
    = f.submit 'Save'
